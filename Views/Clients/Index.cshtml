@{
  Layout = "_Layout";
}

@model List<HairSalon.Models.Client>
@using HairSalon.Models;

<h1>Clients:</h1>

@if(Model.Count == 0)
{
  <h2>This stylist doesn't currently have any clients</h2>
}

@foreach(Client client in Model)
{
  <h2>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</h2>
} 

<p>@Html.ActionLink("Stylists", "Index", "Stylists")</p>
