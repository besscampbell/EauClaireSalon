@{
  Layout = "_Layout";
}

@model List<HairSalon.Models.Client>
@using HairSalon.Models;

<h1>Clients:</h1>

@if(Model.Count == 0)
{
  <h2>@Html.ActionLink("Add", "Create") this stylist's first client!</h2>
}

@foreach(Client client in Model)
{
  <h2>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</h2>

} 

<p>@Html.ActionLink("Add another client", "Create")</p>
<p>@Html.ActionLink("Stylists", "Index", "Stylists")</p>
