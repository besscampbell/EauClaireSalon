@{
  Layout = "_Layout";
}

@model List<HairSalon.Models.Stylist>
@using HairSalon.Models


<h2>Stylists:</h2>
<hr/>
@if (Model.Count == 0)
{
  <h3>Currently, you don't have any active Stylists!</h3>
}


@foreach (Stylist stylist in Model)
{
  <h2>@Html.ActionLink($"{stylist.Name}","Details", new {id = stylist.StylistId})</h2>
}

<hr/>
<p>@Html.ActionLink("Home", "Index", "Home") | @Html.ActionLink("New Stylist", "Create")</p>
