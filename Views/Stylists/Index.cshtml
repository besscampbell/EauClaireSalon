@{
  Layout = "_Layout";
}

@model List<HairSalon.Models.Stylist>
@using HairSalon.Models


<h2>STYLISTS:</h2>

@if (Model.Count == 0)
{
  <h3>Currently, you don't have any active Stylists!</h3>
}


@foreach (Stylist stylist in Model)
{
  <h3>@Html.ActionLink($"{stylist.Name}","Details", new {id = stylist.StylistId})</h3>
}


<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("New Stylist", "Create")</p>
