@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist: @Html.DisplayFor(model => model.Name)</h2>
<hr/>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>
<hr/>
<h3>Clients:</h3>
<hr/>
@foreach(Client client in Model.Clients)
{
  <h4>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId})</h4>
}


<p>@Html.ActionLink("Stylists", "Index") | @Html.ActionLink("Clients", "Index", "Clients")</p>

